- name: StaticMesh
  techniques:
    - name: StaticMesh
      bindings:
        - name: PerFrame
          slot: 0
      textures:
        - name: g_Diffuse
          slot: 0
        - name: g_Specular
          slot: 1
      programs:
        - name: staticmesh
          shaders:
            - name: staticmesh
              type: vertex
            - name: mesh
              type: fragment
              
    -  name: StaticMeshShadow
       bindings:
         - name: PerFrame
           slot: 0
       flags:
         - name: Shadow
       programs:
         - name: staticmesh_shadow
           shaders:
             - name: staticmesh_shadow
               type: vertex
           depth:
             write: 1
             test: 1

              

